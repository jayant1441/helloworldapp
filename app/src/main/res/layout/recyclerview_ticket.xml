<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:background="@drawable/background_recyclerviewticket"
        android:layout_margin="13dp"
       >

        <ImageView
            android:id="@+id/iv_recylerview_ticket"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:layout_margin="12dp"
            android:contentDescription="here comes the image"
            android:src="@drawable/baseline_home_black_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description "
            android:id="@+id/tv_recylerview_ticket"
            android:textSize="21sp"
            android:textColor="#ffffff"
            android:layout_margin="12dp"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>