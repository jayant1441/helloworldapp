<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="42dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="165dp"
                    android:layout_height="142dp"
                    android:gravity="center"
                    android:src="@drawable/vector"
                    android:layout_margin="12dp"/>

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:text="SIGN UP/ LOGIN    "
                    android:textColor="@color/colorPrimary"
                    android:textSize="21sp" />
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_margin="3dp"
                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About us"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/ic_info_outline_black_24dp"
                android:drawablePadding="9dp"/>

            <TextView
                android:id="@+id/tv_aboutus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About us "
                android:layout_marginStart="43dp"
                android:padding="5dp"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/tv_contactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact us "
                android:layout_marginStart="43dp"
                android:padding="5dp"
                android:textSize="16sp"

                />
            <TextView
                android:id="@+id/tv_privacypolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy  "
                android:layout_marginStart="43dp"
                android:padding="5dp"
                android:textSize="16sp"

                />
            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:layout_marginStart="43dp"
                android:padding="5dp"
                android:textSize="16sp"

                />
            <TextView
                android:id="@+id/tv_shareapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share App"
                android:layout_marginStart="43dp"
                android:padding="5dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"

                />
            <View
                style="@style/Divider"
                android:layout_margin="3dp"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Credits"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_margin="10dp"
                android:drawableStart="@drawable/ic_info_outline_black_24dp"
                android:drawablePadding="9dp"/>

            <TextView
                android:id="@+id/tv_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:layout_marginStart="43dp"
                android:padding="5dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

            <View
                style="@style/Divider"
                android:layout_margin="3dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" If you find any bug or suggestion \ncontact us"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>